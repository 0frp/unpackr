{
  "name": "unpackr",
  "version": "0.1.0",
  "description": "Modern, secure archive manager with pre-extraction malware checks and Windows installer support.",
  "main": "dist/main.js",
  "author": "Unpackr Team",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist release",
    "build": "npm run clean && tsc -p tsconfig.json && node scripts/copy-static.mjs",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.unpackr.desktop",
    "productName": "Unpackr",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Unpackr"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Unpackr",
      "runAfterFinish": true,
      "perMachine": false
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}